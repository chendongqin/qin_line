<script type="text/javascript">
  (() => {
    // 修改个人信息
    $('#showEditModal').click(() => {
      $('#editUserModal').modal('show');
    });
    $('#editUser').click(() => {
      const params = $('#editForm').serializeArray();
      $.post('/user/index/update', params, (res) => {
        if (res.status === true) {
          location.reload();
        } else {
          alert(res.msg);
        }
      });
    });
    // 修改登录密码
    $('#showPwdModal').click(() => {
      $('#editPwdModal').modal('show');
    });
