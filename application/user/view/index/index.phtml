      const params = $('#editPwdForm').serializeArray();
      $.post('/user/index/changepw', params, (res) => {
        if (res.status === true) {
          location.reload();
        } else {
          alert(res.msg);
        }
      });
    });
    // 充值
    $('#showRechargeModal').click(() => {
      $('#rechargeModal').modal('show');
    });
    $('#recharge').click(() => {
      const params = $('#rechargeForm').serializeArray();
      $.post('/user/index/recharge', params, (res) => {
        if (res.status === true) {
          location.reload();
        } else {
          alert(res.msg);
        }
      });
    });
  })();
</script>
