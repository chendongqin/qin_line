      const params = $('#editPwdForm').serializeArray();
      $.post('/teacher/index/changepw', params, (res) => {
        if (res.status === true) {
          location.reload();
        } else {
          alert(res.msg);
        }
      });
    });
    // 打卡
    $('#work').click(() => {
      $.get('/teacher/index/work', {}, (res) => {
        // alert(res.msg);
        if (res.status === true) {
          location.reload();
        }
      });
    })
  })();
</script>
