      const params = $('#editForm').serializeArray();
      $.post('/teacher/index/update', params, (res) => {
        if (res.status === true) {
          location.reload();
        } else {
          alert(res.msg);
        }
      });
    });
    // 修改登录密码
    $('#showPwdModal').click(() => {
      $('#editPwdModal').modal('show');
    });
